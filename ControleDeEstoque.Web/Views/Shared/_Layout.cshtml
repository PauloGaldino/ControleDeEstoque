<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Controle de estoque</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Controle de estoque", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Cadastros
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Grupo de produuto", "GrupoProduto", "Cadastro")</li>
                            <li>@Html.ActionLink("Marca do produto", "MarcaProduto", "Cadastro")</li>
                            <li>@Html.ActionLink("Locais de armazenamento", "LaocalArmazenamento", "Cadastro")</li>
                            <li>@Html.ActionLink("Unidade de medida", "UnidadeMedida", "Cadastro")</li>
                            <li>@Html.ActionLink("Produto", "Produto", "Cadastro")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Cidade", "Cidade", "Cadastro")</li>
                            <li>@Html.ActionLink("Estado", "Estado", "Cadastro")</li>
                            <li>@Html.ActionLink("País", "Pais", "Cadastro")</li>
                            <li>@Html.ActionLink("Fornecedores", "Fornecedor", "Cadastro")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Perfis de usuários", "PerfilUsuario", "Cadastro")</li>
                            <li>@Html.ActionLink("Usuário", "Usuario", "Cadastro")</li>
                        </ul>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Operalções
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Entrada de Produtos", "EntradaEstoque", "Operacao")</li>
                            <li>@Html.ActionLink("Saída de Produtos", "SaidaEstoque", "Operacao")</li>
                            <li>@Html.ActionLink("Lançamento de perda de produtos", "LancamentoPerdaProduto", "Operacao")</li>
                            <li>@Html.ActionLink("Inventário de estoque", "Inventario", "Operacao")</li>
                        </ul>
                    </li>
                    <li class="divider"></li>

                    <li>
                        <a href="# class=" dropdown-toggle" data-toggle="dropdown" ">
                            Relatórios
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Posição de estoque", "PosicaoEstoque", "Relatorio")</li>
                            <li>@Html.ActionLink("Ressuprimwnto", "Ressuprimento", "Home")</li>
                        </ul>
                    </li>
                    <li class="divider"></li>

                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Gráfico
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Perdas por mês", "PerdaMes", "Grafico")</li>
                            <li>@Html.ActionLink("Entradas vs Saídas por mês", "EntradaSaidaMes", "Grafico")</li>
                        </ul>
                    </li>

                </ul>
                <ul class="nav navbar-nav nav navbar-right">
                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Controle de estoque - Todos os direitos reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
